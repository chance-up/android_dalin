<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeVm"
            type="com.example.android_dalin.ui.user.viewmodels.AdvertiseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.views.HomeFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_style"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/teal_700">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출장의달인"
                android:textStyle="italic" />

        </androidx.appcompat.widget.Toolbar>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/advertise_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="500dp"
            app:items="@{homeVm.advertises}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/advertise_viewpager">

            <Button
                android:id="@+id/buttonClean"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:text="청소" />

            <Button
                android:id="@+id/buttonCar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"

                android:layout_margin="10dp"
                android:text="세차" />

            <Button
                android:id="@+id/buttonWash"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:text="세탁" />

            <Button
                android:id="@+id/buttonPet"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"

                android:layout_margin="10dp"
                android:text="애견" />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"

                android:layout_margin="10dp"
                android:text="멀라1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"

                android:layout_margin="10dp"
                android:text="멀라2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"

                android:layout_margin="10dp"
                android:text="멀라3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"


                android:layout_margin="10dp"
                android:text="멀라4" />

        </GridLayout>


        <!--        <com.google.android.material.tabs.TabLayout-->
        <!--            android:id="@+id/advertise_indicator_tablayout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:background="#FFFFFF"-->
        <!--            android:elevation="5dp"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/advertise_viewpager"-->
        <!--            app:tabIndicatorColor="#40D39F" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

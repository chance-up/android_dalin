<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.android_dalin.ui.user.views.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/estimateFragment"
        android:name="com.example.android_dalin.ui.user.views.EstimateFragment"
        android:label="fragment_estimate"
        tools:layout="@layout/fragment_estimate" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.android_dalin.ui.user.views.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.android_dalin.ui.user.views.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.android_dalin.ui.user.views.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.example.android_dalin.ui.user.views.subcategory.SubCategoryFragment"
        android:label="SubCategoryFragment" />

</navigation>